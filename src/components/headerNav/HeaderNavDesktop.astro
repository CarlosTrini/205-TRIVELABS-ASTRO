---
// import logoWhite from "@assets/images/LOGO.png";
import logoYellow from "@assets/images/LOGO-YELLOW.png";
import Image from "astro/components/Image.astro";
---

<style>
    .header-desktop {
        display: none;
        position: fixed;
        z-index: 100;
        top: 0;
        left: 0;
        width: 100%;
        height: 7rem;
        padding: var(--padding-80);
        background-color: var(--color-octonary);
        box-shadow: 0 0 0.5rem 0 var(--color-white-full);
        @media (min-width: 768px) {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
    }

    .header-desktop__logo {
        padding-top: 1.3rem;
        width: 11rem;
        /* height: 10rem; */
    }

    .header-desktop__nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 72%;
        font-size: 1.4rem;

        @media (min-width: 860px) {
            width: 67%;
        }

        @media (min-width: 980px) {
            width: 55%;
        }

        @media (min-width: 1360px) {
            width: 40%;
        }

        @media (min-width: 1536px) {
            width: 33%;
        }

        ul {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 2rem;

            li {
                margin-top: 0.5rem;
                padding-bottom: 0.2rem;
                border-bottom: 0.3rem solid transparent;
                transition: all 0.3s ease-in-out;
                color: var(--color-quinary);
            }
            li:hover {
                color: var(--color-senary);
                border-color: var(--color-senary);
                transform: scale(1.05);
                font-weight: 600;
            }
        }
    }

    .header-desktop__nav-btn-quote {
        button {
            background-color: transparent;
            box-shadow: 0 0 0.4rem 0 var(--color-quinary);
            color: var(--color-quinary);
            width: fit-content;
            letter-spacing: 0.1rem;
            padding: 1rem;
            transition: all 0.3s ease-in-out;
            font-size: 1.4rem;

            &:hover {
                box-shadow: 0 0 1rem 0 var(--color-senary);
                color: var(--color-senary);
                font-weight: 700;
            }
        }
    }
</style>

<header class={`header-desktop`}>
    <a href="/" class={`header-desktop__logo`} title="Ir a la pÃ¡gina de inicio">
        <Image src={logoYellow} alt="TriveLabs logo" />
    </a>
    <section class={`header-desktop__nav`}>
        <ul>
            <li><a href="#">Inicio</a></li>
            <li><a href="#">Nosotros</a></li>
            <li><a href="#">Proyectos</a></li>
            <li><a href="#">Blog</a></li>
        </ul>
        <div class={`header-desktop__nav-btn-quote`}>
            <button class={`g-button-rounded`}>Cotiza tu sitio</button>
        </div>
    </section>
</header>
